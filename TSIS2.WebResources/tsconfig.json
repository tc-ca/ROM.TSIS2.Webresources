{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es6", "es5", "dom"
    ],
    "allowJs": true,
    "outDir": "Webresources/js",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings/**/*"
    ],
    "rootDirs": [
      "./src/ts",
      "./tests"
    ]
 },
  "include": [
    "./src/ts/**/*",
    "./typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}